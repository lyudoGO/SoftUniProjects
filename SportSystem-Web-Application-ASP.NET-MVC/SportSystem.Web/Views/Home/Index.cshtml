@model SportSystem.Web.Controllers.HomeViewModel

@{
    ViewBag.Title = "Home";
}

<div class="row row-centered">
    <div class="col-md-6">
        <h2 class="text-center">Best Matches:</h2>
        <div class="col-md-12">
            @Html.DisplayFor(m => m.Matches)     
        </div>
    </div>
