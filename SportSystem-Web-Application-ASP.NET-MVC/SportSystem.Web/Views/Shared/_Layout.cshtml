<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sport System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("styles", false)
    @RenderSection("scripts", required: false)

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sport System", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("All Matches", "Index", "Matches", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("All Players", "Index", "Players", new { area = "" }, null)</li>
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("All Teams", "Index", "Teams", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Create Team", "Create", "Teams", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Create Match", "Create", "Matches", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Create Player", "Create", "Players", new { area = "" }, null)</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @Html.Partial("_SystemMessages")
        @RenderBody()
        <hr />

    </div>
    <div class="panel-footer">
        <footer>
            <p class="text-center">&copy; @DateTime.Now.Year - SportSystem ASP.NET Application</p>
        </footer>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.error-messages').delay(2500).fadeOut();
        });
    </script>
</body>
</html>
