@model SportSystem.Web.Models.CommentViewModel

<div class="col-md-12">
    <div class="panel panel-default" id="comment-@Model.Id">
        <div class="panel-heading">
            <p>
                <strong>Author: </strong>
                <span>@Model.Author</span>
            </p>
        </div>
        <div class="panel-body">
            <pre><strong>Comment: </strong>@Model.Content</pre>
            @if (this.User.Identity.Name == Model.Author)
            {
                using (Ajax.BeginForm("Delete", "Comments", new { id = Model.Id }, new AjaxOptions()
                      {
                          HttpMethod = "POST",
                          InsertionMode = InsertionMode.ReplaceWith,
                          UpdateTargetId = "comment-" + Model.Id,
                          LoadingElementId = "deleting"
                      }, new { @class = "text-center"}))
                {
                    <input type="submit" class="btn btn-default" value="Delete" />
                }
            }
        </div>
    </div>
</div>